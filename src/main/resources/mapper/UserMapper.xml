<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tyb.birthy_polaris.mappers.UserMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 id,	u_photo,	u_name,	u_nick,	u_password,	u_email,	u_tel,	isDel
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectByPrimaryKey" resultType="user" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM bs_user
		 WHERE u_id = #{uId}
	</select>

	<!--删除：根据主键ID删除-->
	<delete id="deleteByPrimaryKey" parameterType="java.lang.String">
		 DELETE FROM bs_user
		 WHERE u_id = #{uId}
	</delete>

	<!-- 添加 -->
	<insert id="insert" parameterType="user">
		 INSERT INTO bs_user
 		(u_id,u_photo,u_name,u_nick,u_password,u_email,u_tel,isDel) 
		 VALUES 
 		(#{uId},#{uPhoto},#{uName},#{uNick},#{uPassword},#{uEmail},#{uTel},#{isDel}) 
	</insert>

	<!-- 添加 （匹配有值的字段）-->
	<insert id="insertSelective" parameterType="user">
		 INSERT INTO bs_user
		 <trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="uId != null">
				 u_id,
			</if>
			<if test="uPhoto != null">
				 u_photo,
			</if>
			<if test="uName != null">
				 u_name,
			</if>
			<if test="uNick != null">
				 u_nick,
			</if>
			<if test="uPassword != null">
				 u_password,
			</if>
			<if test="uEmail != null">
				 u_email,
			</if>
			<if test="uTel != null">
				 u_tel,
			</if>
			<if test="isDel != null">
				 isDel,
			</if>

		 </trim>
		 <trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="uId!=null">
				 #{uId},
			</if>
			<if test="uPhoto!=null">
				 #{uPhoto},
			</if>
			<if test="uName!=null">
				 #{uName},
			</if>
			<if test="uNick!=null">
				 #{uNick},
			</if>
			<if test="uPassword!=null">
				 #{uPassword},
			</if>
			<if test="uEmail!=null">
				 #{uEmail},
			</if>
			<if test="uTel!=null">
				 #{uTel},
			</if>
			<if test="isDel!=null">
				 #{isDel},
			</if>
		 </trim>
	</insert>

	<!-- 修 改-->
	<update id="updateByPrimaryKeySelective" parameterType="user">
		 UPDATE bs_user
 		 <set> 
			<if test="uPhoto != null">
				 u_photo = #{uPhoto},
			</if>
			<if test="uName != null">
				 u_name = #{uName},
			</if>
			<if test="uNick != null">
				 u_nick = #{uNick},
			</if>
			<if test="uPassword != null">
				 u_password = #{uPassword},
			</if>
			<if test="uEmail != null">
				 u_email = #{uEmail},
			</if>
			<if test="uTel != null">
				 u_tel = #{uTel},
			</if>
			<if test="isDel != null">
				 isDel = #{isDel},
			</if>

 		 </set>
		 WHERE u_id = #{uId}
	</update>

	<!-- 修 改-->
	<update id="updateByPrimaryKey" parameterType="user">
		 UPDATE bs_user
		 SET 
			 u_photo = #{uPhoto},
			 u_name = #{uName},
			 u_nick = #{uNick},
			 u_password = #{uPassword},
			 u_email = #{uEmail},
			 u_tel = #{uTel},
			 isDel = #{isDel}
		 WHERE u_id = #{uId}
	</update>
</mapper>